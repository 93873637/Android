<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liz.whatsai.ui.NodeActivity">

    <LinearLayout
        android:id="@+id/ll_whatsai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:layout_marginBottom="0dp">

        <!--title bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="start|center_vertical">

            <ImageButton
                android:id="@+id/left_img_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/ic_return" />

            <TextView
                android:id="@+id/tool_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/app_name"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorToolbarText"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <!--node name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/textNodeName"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="Name: "
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editNodeName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:cursorVisible="true"
                android:focusable="true"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:background="@drawable/bg_edittext"
                android:hint="please input name"
                android:textStyle="italic"
                />
            <CheckBox
                android:id="@+id/cbDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text=""
                android:checked="false"/>
        </LinearLayout>

        <!--remind-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/textRemind"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="Remind: "
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editRemind"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:cursorVisible="true"
                android:focusable="true"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:background="@drawable/bg_edittext"
                android:hint="please input remind string"
                android:textStyle="italic"
                />
        </LinearLayout>

        <!--detail-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/textDetail"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center|top"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:text="Detail: "
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editDetail"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:gravity="top|left"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:cursorVisible="true"
                android:focusable="true"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="false"
                android:background="@drawable/bg_edittext"
                android:hint="please input remind string"
                android:textStyle="italic"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
