<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liz.whatsai.ui.NodeActivity">

    <LinearLayout
        android:id="@+id/ll_whatsai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:layout_marginBottom="0dp">

        <!--title bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorDeepBlue"
            android:gravity="start|center_vertical">

            <ImageButton
                android:id="@+id/titlebar_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/ic_return" />

            <TextView
                android:id="@+id/titlebar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/colorToolbarText"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/titlebar_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_close" />
        </LinearLayout>
        <!--title bar-->

        <!--tool bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal"
            android:background="@color/colorDeepBlue"
            android:gravity="start|center_vertical">

            <ImageButton
                android:id="@+id/toolbar_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_save" />

            <ImageButton
                android:id="@+id/toolbar_cloud_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_cloudsave2" />

            <ImageButton
                android:id="@+id/toolbar_datetime"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_calendar_clock" />

            <ImageButton
                android:id="@+id/toolbar_undo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_undo" />

            <ImageButton
                android:id="@+id/toolbar_redo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_redo" />

            <ImageButton
                android:id="@+id/toolbar_to_up"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_to_up" />

            <ImageButton
                android:id="@+id/toolbar_to_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|center_vertical"
                android:background="@drawable/icon_to_bottom" />

        </LinearLayout>
        <!--tool bar-->

        <!--edit control-->
        <ScrollView
            android:id="@+id/edit_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/bg_edittext"
                android:cursorVisible="true"
                android:gravity="top|start"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scrollbarFadeDuration="2000"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:textSize="16sp" />
        </ScrollView>
        <!--edit control-->

    </LinearLayout>
</LinearLayout>
