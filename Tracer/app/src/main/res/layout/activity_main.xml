<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--times bar-->
    <LinearLayout
        android:id="@+id/ll_times_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:background="#a0a0a0"
        >
        <TextView
            android:id="@+id/text_current_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/time_padding_top"
            android:paddingBottom="@dimen/time_padding_bottom"
            android:text="10:29:58"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/time_text_size"
            android:textColor="#5f005f"
            android:background="#a0ffa0"
            />
        <TextView
            android:id="@+id/text_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/time_padding_top"
            android:paddingBottom="@dimen/time_padding_bottom"
            android:text="10:00:00"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/time_text_size"
            android:textColor="#5f5f00"
            android:background="#a0a0ff"
            />
        <TextView
            android:id="@+id/text_time_elapsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/time_padding_top"
            android:paddingBottom="@dimen/time_padding_bottom"
            android:text="00:20:30"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/time_text_size"
            android:textColor="#005f5f"
            android:background="#ffa0a0"
            />
    </LinearLayout>

    <!-- current speed bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="#e0e0e0"
        >
        <TextView
            android:id="@+id/text_current_speed"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:background="#ff0000"
            android:textSize="@dimen/tracer_text_size"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_current_speed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="13.9/50.1"
            android:textColor="#00ee00"
            android:textSize="@dimen/tracer_text_size"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <!-- average speed bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="#e0e0e0"
        >
        <TextView
            android:id="@+id/text_average_speed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:background="#0000ff"
            android:textSize="@dimen/tracer_text_size"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_average_speed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="13.9/50.1"
            android:textColor="#00ee00"
            android:textSize="@dimen/tracer_text_size"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <!-- bearing&statistics bar -->
    <LinearLayout
        android:id="@+id/ll_angle_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_bearing_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/division_panel"
                />
            <ImageView
                android:id="@+id/iv_bearing_orientation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/orientation"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/text_statis_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="26.6 km"
            android:layout_gravity="start|top"
            android:textStyle="bold"
            android:textSize="@dimen/tracer_text_size" />
    </LinearLayout>

    <!-- control bar -->
    <LinearLayout
        android:id="@+id/ll_control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        >
        <Button
            android:id="@+id/btn_switch_tracing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingTop="@dimen/control_padding_top"
            android:paddingBottom="@dimen/control_padding_bottom"
            android:text="START"
            android:gravity="center"
            android:background="#00ff00"
            android:textColor="#ff00ff"
            android:textStyle="bold"
            android:textSize="@dimen/tracer_text_size" />
        <Button
            android:id="@+id/btn_reset_running"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/control_padding_top"
            android:paddingBottom="@dimen/control_padding_bottom"
            android:text="RST"
            android:gravity="center"
            android:background="#0000ff"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:textSize="@dimen/tracer_text_size" />
        <Button
            android:id="@+id/btn_exit_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/control_padding_top"
            android:paddingBottom="@dimen/control_padding_bottom"
            android:text="EXT"
            android:gravity="center"
            android:background="#ff0000"
            android:textColor="#00ffff"
            android:textStyle="bold"
            android:textSize="@dimen/tracer_text_size" />
    </LinearLayout>

    <!--log info showing-->
    <ScrollView
        android:id="@+id/scroll_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:id="@+id/text_log_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="top|start"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scrollbarFadeDuration="2000"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textIsSelectable="true"
            android:textSize="12sp" />
    </ScrollView>
</LinearLayout>
