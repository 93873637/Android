<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DeviceConfigActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <!--Phone ID-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:text="设备编号:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="M01"
                android:singleLine="true"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--Phone ID-->

        <!--Server Address-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_server_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:text="服务器地址:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_server_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="192.168.10.191"
                android:singleLine="true"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--Server Address-->

        <!--User Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:text="用户名:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="shandong1"
                android:singleLine="true"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--User Name-->

        <!--Password-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:text="密码:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="shandong1"
                android:singleLine="true"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--Password-->

        <!--Network Type-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:text="接口类型:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="sftp"
                android:singleLine="true"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--Network Type-->

        <Button
            android:id="@+id/btn_update_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#00ff00"
            android:text="更新设置"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ff0000"
            android:text="取消"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>