<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:paddingTop = "8dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <!--TelList-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="start|center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_tel_list_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:paddingStart="2dp"
                android:paddingEnd="10dp"
                android:text="TelNumber: 999"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_refresh_tel_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:textColor="#0000FF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--TelList-->

        <!--当前已拨打-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start|center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_called_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="当前已拨打: 999"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_reset_called_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                android:textColor="#0000FF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--当前已拨打-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_dial_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="拨号时间间隔(ms): "
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_dial_interval"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:inputType="number"
                android:maxLength="5"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="3000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_start_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#00ff00"
            android:text="开始拨打"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <ScrollView
            android:id="@+id/scrollInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:transcriptMode="normal">

            <TextView
                android:id="@+id/text_dial_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fadeScrollbars="false"
                android:focusable="true"
                android:gravity="start|top"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbarFadeDuration="2000"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:textIsSelectable="true"
                android:textSize="11sp" />
        </ScrollView>

        <Button
            android:id="@+id/btn_exit_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ff0000"
            android:text="退出"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>