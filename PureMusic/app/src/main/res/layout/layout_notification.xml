<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/colorLightYellow"
    android:paddingBottom="0dp"
    android:paddingTop="0dp">

    <!--main image for music-->
    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="160dp"
        android:background="@color/light_red"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/MainImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:contentDescription="Main Image"
            android:scaleType="fitXY"
            android:src="@drawable/pure_music" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--play info-->
        <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="0dp"
               android:layout_marginTop="4dp"
               android:layout_marginStart="8dp"
               android:layout_weight="1"
               android:orientation="horizontal">
        <TextView
            android:id="@+id/PlayInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:text="工业革命-正传：68.车库里的电路板"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

            <ImageButton
                android:id="@+id/notify_close_app"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/icon_close_gray" />
         </LinearLayout>

        <!--control toolbar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/notify_play_ctrl_panel_padding"
            android:paddingTop="@dimen/notify_play_ctrl_panel_padding"
            >

            <ImageButton
                android:id="@+id/notify_play_prev"
                android:layout_width="@dimen/notify_play_ctrl_button_width"
                android:layout_height="@dimen/notify_play_ctrl_button_height"
                android:layout_marginEnd="@dimen/notify_play_ctrl_button_margin"
                android:layout_marginStart="@dimen/notify_play_ctrl_button_margin"
                android:background="@drawable/prev" />

            <ImageButton
                android:id="@+id/BtnPlayOrPause"
                android:layout_width="@dimen/notify_play_ctrl_button_width"
                android:layout_height="@dimen/notify_play_ctrl_button_height"
                android:layout_marginEnd="@dimen/notify_play_ctrl_button_margin"
                android:layout_marginStart="@dimen/notify_play_ctrl_button_margin"
                android:background="@drawable/play" />

            <ImageButton
                android:id="@+id/notify_play_next"
                android:layout_width="@dimen/notify_play_ctrl_button_width"
                android:layout_height="@dimen/notify_play_ctrl_button_height"
                android:layout_marginEnd="@dimen/notify_play_ctrl_button_margin"
                android:layout_marginStart="@dimen/notify_play_ctrl_button_margin"
                android:background="@drawable/next" />

            <ImageButton
                android:id="@+id/BtnStop"
                android:layout_width="@dimen/notify_play_ctrl_button_width"
                android:layout_height="@dimen/notify_play_ctrl_button_height"
                android:layout_marginEnd="@dimen/notify_play_ctrl_button_margin"
                android:layout_marginStart="@dimen/notify_play_ctrl_button_margin"
                android:background="@drawable/stop" />

            <ImageButton
                android:id="@+id/BtnPlayMode"
                android:layout_width="@dimen/notify_play_ctrl_button_width"
                android:layout_height="@dimen/notify_play_ctrl_button_height"
                android:layout_marginEnd="@dimen/notify_play_ctrl_button_margin"
                android:layout_marginStart="@dimen/notify_play_ctrl_button_margin"
                android:background="@drawable/single" />

            <ImageButton
                android:id="@+id/notify_play_list"
                android:layout_width="@dimen/notify_play_ctrl_button_width"
                android:layout_height="@dimen/notify_play_ctrl_button_height"
                android:layout_marginEnd="@dimen/notify_play_ctrl_button_margin"
                android:layout_marginStart="@dimen/notify_play_ctrl_button_margin"
                android:background="@drawable/ic_list" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
